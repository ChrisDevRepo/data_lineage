<?xml version="1.0" encoding="UTF-8"?>
<!--
  Azure Web App IIS Configuration for React SPA

  Purpose: Configure URL rewriting for React Router and optimize static file serving
  Platform: Windows Azure App Service (IIS)

  IMPORTANT: This file must be placed in the dist/ folder BEFORE deploying

  Deployment:
    1. Build app: npm run build
    2. Copy this file: cp web.config dist/
    3. Deploy: az webapp deployment source config-zip --src dist.zip
-->
<configuration>
  <system.webServer>

    <!-- URL Rewriting Rules -->
    <rewrite>
      <rules>

        <!-- Rule 1: Force HTTPS -->
        <rule name="Force HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
          </conditions>
          <action
            type="Redirect"
            url="https://{HTTP_HOST}/{R:1}"
            redirectType="Permanent"
          />
        </rule>

        <!-- Rule 2: React Router SPA Fallback -->
        <!--
          Redirects all non-file, non-directory requests to index.html
          This allows React Router to handle client-side routing
        -->
        <rule name="React SPA Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Not a file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Not a directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <!-- Not an API call (future-proofing) -->
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
          </conditions>
          <action
            type="Rewrite"
            url="/"
          />
        </rule>

      </rules>
    </rewrite>

    <!-- Static Content Compression -->
    <urlCompression
      doStaticCompression="true"
      doDynamicCompression="true"
    />

    <!-- Static Content Caching -->
    <staticContent>

      <!-- MIME Type Mappings for Modern Web -->
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
      <mimeMap fileExtension=".css" mimeType="text/css" />

      <!-- Cache Control Headers -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />

    </staticContent>

    <!-- Default Document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- HTTP Headers -->
    <httpProtocol>
      <customHeaders>

        <!-- Security Headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />

        <!-- Remove Server Header (security) -->
        <remove name="X-Powered-By" />

      </customHeaders>
    </httpProtocol>

    <!-- Error Pages (Optional) -->
    <httpErrors existingResponse="PassThrough" />

  </system.webServer>
</configuration>
