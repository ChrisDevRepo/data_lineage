# EditorConfig - Coding Style Configuration
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# Markdown files (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# Configuration files
[{package.json,tsconfig.json}]
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Environment files
[.env*]
indent_size = 2
